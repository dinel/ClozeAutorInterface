{% extends 'base.html.twig' %}

{% block body %}

    <script>
        var idQuiz = {{ mcq.id }};
    </script>
    
    <div class="container">
        <div class="row voffset4">
            <div class="col-md-8">                
                <div id="text-container">
                    <div id="text" style="display: none;">                                    
                        <div>
                            {{ mcq.text|nl2br }}                                    
                        </div>                                        
                    </div>
                    <div id="btn-text-container" class="text-button" style="display: none;">
                        <a class="btn btn-default voffset4 btn-message" role="button">Display text</a>
                        <a class="btn btn-default voffset4 btn-message" role="button" style="display: none;">Hide text</a>
                    </div>
                </div>
                    
                <div id="rating">
                    <div>
                        <h2>How easy or difficult did you find this text? 
                        <select id="text-difficulty">
                            <option value="none" disabled selected></option>
                            <option value="veryeasy">Very easy</option>
                            <option value="easy">Easy</option>
                            <option value="medium">Medium</option>
                            <option value="difficult">Difficult</option>
                            <option value="verydifficult">Very difficult</option>
                        </select>
                            </h2>
                    </div>
                    <a class="btn btn-default voffset4 disabled" id="btn-rate" role="button">Next</a>
                </div>
                
                <div id="mcq"  style="display: none;">
                    <h1>Multiple choice questions</h1>
                    <div>
                        {% for question in mcq.questions %}
                            {% include 'default/display_question.html.twig' with {'question': question } %}
                        {% endfor %}
                        
                        <a class="btn btn-default voffset4" id="btn-submit-mcq" role="button" href="{{ path('next') }}">Next</a>
                        <div id="incomplete-mcq" style="display: none;">Please answer all the questions</div>
                    </div>
                </div>
            </div>                
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>    
        var prereading = 2; // cloze test
    </script>
        
    <script src="{{ asset('js/quiz.js') }}"></script>
{% endblock %}
