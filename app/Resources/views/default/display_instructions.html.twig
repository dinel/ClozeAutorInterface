{% extends 'base.html.twig' %}

{% block body %}
    
    <div class="container">
        <div class="row voffset4">
            <div class="col-md-8">
                <div id="instructions">
                    <h1>Instructions</h1>
                    <div>
                        {{ instructions.text|nl2br }}                        
                    </div>
                    <a class="btn btn-default voffset4" id="btn-instructions" role="button" href="{{ path('next') }}">Next</a> 
                </div>
            </div>
        </div>
    </div>
                    
{% endblock %}

{% block javascripts %}
    {{ parent() }}        
    <script src="{{ asset('js/utils.js') }}"></script>
    <script>
        $( document ).ready(function() {
            logAction("Opened instructions " + {{ instructions.id }})
        });
    </script>
{% endblock %}

